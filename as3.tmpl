{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.15.0",
        "id": "fghijkl7890",
        "label": "Sample-Consul-NIA",
        "remark": "Sample Consul NIA demo",
        "${tenant_name}": {
            "class": "Tenant",
            "${app_name}": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": ${vs_server_address},
                    "pool": "${pool_name}"
                },
                "${pool_name}": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [{
                        "servicePort": ${service_port},
                        "serverAddresses": ${service_address},
                        "shareNodes": true
                    }]
                }
            }
        }
    }
}